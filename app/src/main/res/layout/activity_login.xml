<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/activity_login_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:gravity="center"
        android:inputType="textCapWords"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Name"/>

    <EditText
        android:id="@+id/activity_login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_name_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="numberPassword"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="Password"/>

    <Button
        android:id="@+id/activity_login_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_login_password_input"
        app:layout_constraintRight_toRightOf="@+id/activity_login_password_input"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_password_input"
        android:layout_marginTop="24dp"
        android:text="Sign up"/>

</android.support.constraint.ConstraintLayout>